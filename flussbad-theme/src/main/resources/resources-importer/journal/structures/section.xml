    <dynamic-element dataType="boolean" indexType="keyword" localizable="true" name="showSocialMedia" readOnly="false" repeatable="false" required="false" showLabel="true" type="checkbox" width="">
        <meta-data locale="de_DE">
            <entry name="label">
                <![CDATA[Social-Media anzeigen?]]>
            </entry>
            <entry name="predefinedValue">
                <![CDATA[false]]>
            </entry>
            <entry name="tip">
                <![CDATA[Markiere diese Option, wenn am Ende dieses Abschnitts die Social-Media Links für diese Seite angezeigt werden sollen.]]>
            </entry>
        </meta-data>
    </dynamic-element>
    <dynamic-element dataType="string" indexType="keyword" localizable="true" name="section" readOnly="false" repeatable="true" required="false" showLabel="true" type="text" width="medium">
        <dynamic-element dataType="html" fieldNamespace="ddm" indexType="keyword" localizable="true" name="body" readOnly="false" repeatable="false" required="false" showLabel="true" type="ddm-text-html" width="large">
            <meta-data locale="de_DE">
                <entry name="label">
                    <![CDATA[Textkörper]]>
                </entry>
                <entry name="predefinedValue">
                    <![CDATA[]]>
                </entry>
                <entry name="tip">
                    <![CDATA[Schreibe hier Deinen Text und bemühe Dich, Deinen Beitrag sinnvoll in überschaubare Abschnitte zu gliedern.]]>
                </entry>
            </meta-data>
        </dynamic-element>
        <dynamic-element dataType="boolean" indexType="keyword" localizable="true" name="imageAboveTheText" readOnly="false" repeatable="false" required="false" showLabel="true" type="checkbox" width="">
            <meta-data locale="de_DE">
                <entry name="label">
                    <![CDATA[Abbildung(en) vor dem Text]]>
                </entry>
                <entry name="predefinedValue">
                    <![CDATA[false]]>
                </entry>
                <entry name="tip">
                    <![CDATA[Entscheide, ob die Abbildung(en) vor oder nach dem Text (Standard) angezeigt werden sollen]]>
                </entry>
            </meta-data>
        </dynamic-element>
        <dynamic-element dataType="document-library" fieldNamespace="ddm" indexType="keyword" localizable="true" name="image" readOnly="false" repeatable="true" required="false" showLabel="true" type="ddm-documentlibrary" width="">
            <dynamic-element dataType="string" indexType="keyword" localizable="true" name="caption" readOnly="false" repeatable="false" required="false" showLabel="true" type="textarea" width="[object Object],[object Object],[object Object],[object Object],[object Object],[object Object]">
                <meta-data locale="de_DE">
                    <entry name="label">
                        <![CDATA[Bildunterschrift]]>
                    </entry>
                    <entry name="predefinedValue">
                        <![CDATA[]]>
                    </entry>
                    <entry name="tip">
                        <![CDATA[Gib jedem Bild eine knappe und aussagekräftige Bildunterschrift.]]>
                    </entry>
                </meta-data>
            </dynamic-element>
            <meta-data locale="de_DE">
                <entry name="label">
                    <![CDATA[Abbildung]]>
                </entry>
                <entry name="predefinedValue">
                    <![CDATA[]]>
                </entry>
                <entry name="tip">
                    <![CDATA[Wähle eine oder mehrere Abbildungen aus, die in diesem Absatz angezeigt werden.]]>
                </entry>
            </meta-data>
        </dynamic-element>
        <meta-data locale="de_DE">
            <entry name="label">
                <![CDATA[Absatz]]>
            </entry>
            <entry name="predefinedValue">
                <![CDATA[]]>
            </entry>
            <entry name="tip">
                <![CDATA[Gib dem Abschnitt eine knappe aber aussagekräftige Zwischenüberschrift.]]>
            </entry>
        </meta-data>
    </dynamic-element>
