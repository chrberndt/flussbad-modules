<root available-locales="de_DE" default-locale="de_DE">
<!--
    intro.xml: A structure for a content object of 
    type "Intro", which is a short introduction into a
    section or topic, consisting of a key claim and 
    three introductory abstracts. 
    
    Created:    2015-09-29 12:12 by Christian Berndt
    Modified:   2015-10-28 21:00 by Christian Berndt
    Version:    1.0.0
    
    Please note: Although this structure is stored in the 
    site's context it's source is managed via git. Whenever you 
    change the structure online make sure that you commit your 
    changes to the flussbad-modules repo, too.
-->
    <dynamic-element dataType="string" indexType="keyword" localizable="true" name="headline" readOnly="false" repeatable="false" required="false" showLabel="true" type="text" width="small">
        <meta-data locale="de_DE">
            <entry name="label">
                <![CDATA[Überschrift]]>
            </entry>
            <entry name="predefinedValue">
                <![CDATA[]]>
            </entry>
            <entry name="tip">
                <![CDATA[Gib hier die Überschrift ein, die über den drei Abstracts stehen soll.]]>
            </entry>
        </meta-data>
    </dynamic-element>
    <dynamic-element dataType="document-library" fieldNamespace="ddm" indexType="keyword" localizable="true" name="background" readOnly="false" repeatable="false" required="false" showLabel="true" type="ddm-documentlibrary" width="">
        <meta-data locale="de_DE">
            <entry name="label">
                <![CDATA[Hintergrundbild]]>
            </entry>
            <entry name="predefinedValue">
                <![CDATA[]]>
            </entry>
            <entry name="tip">
                <![CDATA[Wähle ein Bild aus der Dokumentenbibliothek aus, das als Hintergundbild verwendet werden soll.]]>
            </entry>
        </meta-data>
    </dynamic-element>
    <dynamic-element dataType="boolean" indexType="keyword" localizable="true" name="useGradient" readOnly="false" repeatable="false" required="false" showLabel="true" type="checkbox" width="">
        <meta-data locale="de_DE">
            <entry name="label">
                <![CDATA[Hintergrundbild abdunkeln]]>
            </entry>
            <entry name="predefinedValue">
                <![CDATA[true]]>
            </entry>
            <entry name="tip">
                <![CDATA[Standardmässig werden die Hintergrundbilder in Intros etwas abgedunkelt, damit man Schrift auf dem Bild besser lesen kann. Du kannst dieses Verhalten deaktivieren.]]>
            </entry>
        </meta-data>
    </dynamic-element>
    <dynamic-element dataType="link-to-page" fieldNamespace="ddm" indexType="keyword" localizable="true" name="clubLink" readOnly="false" repeatable="false" required="false" showLabel="true" type="ddm-link-to-page" width="small">
        <meta-data locale="de_DE">
            <entry name="label">
                <![CDATA[Werde aktiv! Link]]>
            </entry>
            <entry name="predefinedValue">
                <![CDATA[]]>
            </entry>
            <entry name="tip">
                <![CDATA[Wähle hier aus, auf welche Seite der Werde aktiv! Link verweisen soll. Wenn kein Ziel ausgewählt ist, dann wir die Schaltfläche nicht dargestellt.]]>
            </entry>
        </meta-data>
    </dynamic-element>
    <dynamic-element dataType="string" indexType="keyword" localizable="true" multiple="false" name="backgroundColor" readOnly="false" repeatable="false" required="false" showLabel="true" type="select" width="">
        <dynamic-element name="option7089" type="option" value="">
            <meta-data locale="de_DE">
                <entry name="label">
                    <![CDATA[keine]]>
                </entry>
            </meta-data>
        </dynamic-element>
        <dynamic-element name="option6582" type="option" value="turquois">
            <meta-data locale="de_DE">
                <entry name="label">
                    <![CDATA[türkis]]>
                </entry>
            </meta-data>
        </dynamic-element>
        <dynamic-element name="option6583" type="option" value="gray-green">
            <meta-data locale="de_DE">
                <entry name="label">
                    <![CDATA[graugrün]]>
                </entry>
            </meta-data>
        </dynamic-element>
        <dynamic-element name="option6584" type="option" value="sand">
            <meta-data locale="de_DE">
                <entry name="label">
                    <![CDATA[sand]]>
                </entry>
            </meta-data>
        </dynamic-element>
        <meta-data locale="de_DE">
            <entry name="label">
                <![CDATA[Hintergrundfarbe]]>
            </entry>
            <entry name="predefinedValue">
                <![CDATA[[""]]]>
            </entry>
            <entry name="tip">
                <![CDATA[Wähle die Hintergrundfarbe für die gesamte Box aus (oder für die einzelnen Teaser, wenn Du ein Hintergrundbild benutzst).]]>
            </entry>
        </meta-data>
    </dynamic-element>
    <dynamic-element dataType="string" indexType="keyword" localizable="true" name="caption" readOnly="false" repeatable="true" required="false" showLabel="true" type="text" width="small">
        <dynamic-element dataType="string" indexType="keyword" localizable="true" name="claim" readOnly="false" repeatable="false" required="false" showLabel="true" type="text" width="large">
            <meta-data locale="de_DE">
                <entry name="label">
                    <![CDATA[Claim]]>
                </entry>
                <entry name="predefinedValue">
                    <![CDATA[]]>
                </entry>
                <entry name="tip">
                    <![CDATA[Formuliere einen knappe und prägnanten Claim]]>
                </entry>
            </meta-data>
        </dynamic-element>
        <dynamic-element dataType="string" indexType="keyword" localizable="true" name="abstract" readOnly="false" repeatable="false" required="false" showLabel="true" type="textarea" width="medium">
            <meta-data locale="de_DE">
                <entry name="label">
                    <![CDATA[Abstract]]>
                </entry>
                <entry name="predefinedValue">
                    <![CDATA[]]>
                </entry>
                <entry name="tip">
                    <![CDATA[Beschreibe in einem Satz, worum es in diesem Abschnitt geht.]]>
                </entry>
            </meta-data>
        </dynamic-element>
        <dynamic-element dataType="link-to-page" fieldNamespace="ddm" indexType="keyword" localizable="true" name="abstractLink" readOnly="false" repeatable="false" required="false" showLabel="true" type="ddm-link-to-page" width="small">
            <meta-data locale="de_DE">
                <entry name="label">
                    <![CDATA[Link]]>
                </entry>
                <entry name="predefinedValue">
                    <![CDATA[]]>
                </entry>
                <entry name="tip">
                    <![CDATA[Wähle die Seite aus, auf die dieser Abstract verweisen soll.]]>
                </entry>
            </meta-data>
        </dynamic-element>
        <dynamic-element dataType="string" indexType="keyword" localizable="true" name="abstractLabel" readOnly="false" repeatable="false" required="false" showLabel="true" type="text" width="small">
            <meta-data locale="de_DE">
                <entry name="label">
                    <![CDATA[Link Beschriftung]]>
                </entry>
                <entry name="predefinedValue">
                    <![CDATA[]]>
                </entry>
                <entry name="tip">
                    <![CDATA[Gib dem Link eine aussagekräftige Beschriftung, bspw.: "Zum Projekt", "Mehr erfahren" o.ä.]]>
                </entry>
            </meta-data>
        </dynamic-element>
        <meta-data locale="de_DE">
            <entry name="label">
                <![CDATA[Titel]]>
            </entry>
            <entry name="predefinedValue">
                <![CDATA[]]>
            </entry>
            <entry name="tip">
                <![CDATA[Gib dem einzelnen Abstract eine aussagekräftige Überschrift]]>
            </entry>
        </meta-data>
    </dynamic-element>
    <dynamic-element dataType="link-to-page" fieldNamespace="ddm" indexType="keyword" localizable="true" name="link" readOnly="false" repeatable="false" required="false" showLabel="true" type="ddm-link-to-page" width="small">
        <meta-data locale="de_DE">
            <entry name="label">
                <![CDATA[Link]]>
            </entry>
            <entry name="predefinedValue">
                <![CDATA[]]>
            </entry>
            <entry name="tip">
                <![CDATA[Wähle die Seite aus, auf welche diese Abstracts verweisen sollen.]]>
            </entry>
        </meta-data>
    </dynamic-element>
    <dynamic-element dataType="string" indexType="keyword" localizable="true" name="label" readOnly="false" repeatable="false" required="false" showLabel="true" type="text" width="small">
        <meta-data locale="de_DE">
            <entry name="label">
                <![CDATA[Link Beschriftung]]>
            </entry>
            <entry name="predefinedValue">
                <![CDATA[]]>
            </entry>
            <entry name="tip">
                <![CDATA[Gib dem Link eine aussagekräftige Beschriftung, bspw.: "Zum Projekt", "Mehr erfahren" o.ä.]]>
            </entry>
        </meta-data>
    </dynamic-element>
</root>
