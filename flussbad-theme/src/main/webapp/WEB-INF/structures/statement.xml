<root available-locales="de_DE" default-locale="de_DE">
<!--
    Statement structure: A structure for a content object 
    which respresents a statement by an author.
    
    Created:    2015-09-29 21:33 by Christian Berndt
    Modified:   2015-09-29 21:33 by Christian Berndt
    Version:    0.9.0
    
    Please note: Although this structure is stored in the 
    site's context it's source is managed via git. Whenever you 
    change the structure online make sure that you commit your 
    changes to the flussbad-modules repo, too.
-->
    <dynamic-element dataType="string" indexType="keyword" localizable="true" name="statement" readOnly="false" repeatable="true" required="true" showLabel="true" type="textarea" width="small">
        <dynamic-element dataType="string" indexType="keyword" localizable="true" name="author" readOnly="false" repeatable="false" required="true" showLabel="true" type="text" width="small">
            <meta-data locale="de_DE">
                <entry name="label">
                    <![CDATA[Autor]]>
                </entry>
                <entry name="predefinedValue">
                    <![CDATA[]]>
                </entry>
                <entry name="tip">
                    <![CDATA[Du musst immer angeben, von wem diese Aussage stammt.]]>
                </entry>
            </meta-data>
        </dynamic-element>
        <meta-data locale="de_DE">
            <entry name="label">
                <![CDATA[Statement]]>
            </entry>
            <entry name="predefinedValue">
                <![CDATA[]]>
            </entry>
            <entry name="tip">
                <![CDATA[Gib hier das Statement an, dass in einem entsprechenden Karussel dargestellt weden kann.]]>
            </entry>
        </meta-data>
    </dynamic-element>
    <dynamic-element dataType="string" indexType="keyword" localizable="true" multiple="false" name="colorScheme" readOnly="false" repeatable="false" required="false" showLabel="true" type="select" width="">
        <dynamic-element name="option4535" type="option" value="gray-green">
            <meta-data locale="de_DE">
                <entry name="label">
                    <![CDATA[graugrün]]>
                </entry>
            </meta-data>
        </dynamic-element>
        <dynamic-element name="option4536" type="option" value="sand">
            <meta-data locale="de_DE">
                <entry name="label">
                    <![CDATA[sand]]>
                </entry>
            </meta-data>
        </dynamic-element>
        <dynamic-element name="option4537" type="option" value="turquois">
            <meta-data locale="de_DE">
                <entry name="label">
                    <![CDATA[türkis]]>
                </entry>
            </meta-data>
        </dynamic-element>
        <meta-data locale="de_DE">
            <entry name="label">
                <![CDATA[Farbschema]]>
            </entry>
            <entry name="predefinedValue">
                <![CDATA[[""]]]>
            </entry>
            <entry name="tip">
                <![CDATA[]]>
            </entry>
        </meta-data>
    </dynamic-element>
</root>