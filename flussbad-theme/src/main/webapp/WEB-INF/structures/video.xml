<root available-locales="de_DE" default-locale="de_DE">
<!--
    video.xml: A structure for a content object of 
    type "video", which is used to embed videos from 
    vimeo, youtube, etc via the oembed api.
    
    Created:    2016-04-07 09:10 by Christian Berndt
    Modified:   2016-04-07 09:10 by Christian Berndt
    Version:    1.0.0
    
    Please note: Although this structure is stored in the 
    site's context it's source is managed via git. Whenever you 
    change the structure online make sure that you commit your 
    changes to the flussbad-modules repo, too.
-->
    <dynamic-element dataType="string" indexType="keyword"
        localizable="true" multiple="false" name="service" readOnly="false"
        repeatable="false" required="false" showLabel="true" type="select"
        width="">
        <dynamic-element name="option3753" type="option"
            value="http:&#047;&#047;www.youtube.com&#047;oembed?url=">
            <meta-data locale="de_DE">
                <entry name="label">
                    <![CDATA[youtube]]>
                </entry>
            </meta-data>
        </dynamic-element>
        <dynamic-element name="option3754" type="option"
            value="https:&#047;&#047;vimeo.com&#047;api&#047;oembed.json?url=">
            <meta-data locale="de_DE">
                <entry name="label">
                    <![CDATA[vimeo]]>
                </entry>
            </meta-data>
        </dynamic-element>
        <meta-data locale="de_DE">
            <entry name="label">
                <![CDATA[Service]]>
            </entry>
            <entry name="predefinedValue">
                <![CDATA[[""]]]>
            </entry>
            <entry name="tip">
                <![CDATA[Wähle den Dienst aus, von dem Du das Video einbetten möchtest.]]>
            </entry>
        </meta-data>
    </dynamic-element>
    <dynamic-element dataType="string" indexType="keyword"
        localizable="true" name="url" readOnly="false" repeatable="false"
        required="false" showLabel="true" type="text" width="small">
        <meta-data locale="de_DE">
            <entry name="label">
                <![CDATA[Video URL]]>
            </entry>
            <entry name="predefinedValue">
                <![CDATA[]]>
            </entry>
            <entry name="tip">
                <![CDATA[Gib hier den URL des Videos ein. Der URL muss entweder mit http:// oder https:// beginnen.]]>
            </entry>
        </meta-data>
    </dynamic-element>
</root>