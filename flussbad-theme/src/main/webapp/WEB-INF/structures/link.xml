<root available-locales="de_DE" default-locale="de_DE">
<!--
    Link structure: A structure for a content object of 
    type "Link", which is a link centered on the screen
    with a configurable label.
    
    Created:    2015-10-01 18:59 by Christian Berndt
    Modified:   2015-10-01 18:59 by Christian Berndt
    Version:    0.9.0
    
    Please note: Although this structure is stored in the 
    site's context it's source is managed via git. Whenever you 
    change the structure online make sure that you commit your 
    changes to the flussbad-modules repo, too.
-->
	<dynamic-element dataType="link-to-page" fieldNamespace="ddm" indexType="keyword" localizable="true" name="target" readOnly="false" repeatable="false" required="false" showLabel="true" type="ddm-link-to-page" width="small">
		<dynamic-element dataType="string" indexType="keyword" localizable="true" name="label" readOnly="false" repeatable="false" required="false" showLabel="true" type="text" width="small">
			<meta-data locale="de_DE">
				<entry name="label">
					<![CDATA[Beschriftung]]>
				</entry>
				<entry name="predefinedValue">
					<![CDATA[]]>
				</entry>
				<entry name="tip">
					<![CDATA[Gib dem Link eine aussagekrätigen Titel. Am besten nennst Du ihn so, wie die Zielseite heißt. Damit vermeidest Du Verwirrung beim Benutzer.]]>
				</entry>
			</meta-data>
		</dynamic-element>
		<meta-data locale="de_DE">
			<entry name="label">
				<![CDATA[Interne Zielseite]]>
			</entry>
			<entry name="predefinedValue">
				<![CDATA[]]>
			</entry>
			<entry name="tip">
				<![CDATA[Wähle die Seite aus, auf die dieser Link verweisen soll.]]>
			</entry>
		</meta-data>
	</dynamic-element>
</root>